<Window x:Class="DiplomProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomProject"
        mc:Ignorable="d"
        Title="Авторизация"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="BorderBrush" Value="#FF483D8B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF444444"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF483D8B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6A5ACD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Background="#FFF9F5F1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <Label Content="Добро пожаловать"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF483D8B"
                       Margin="0 0 0 30"/>

                <Label Content="Email"
                       FontSize="14"
                       Foreground="#FF483D8B"
                       Margin="5 0 0 5"/>
                <TextBox x:Name="EmailTextBox"
                         Height="35"
                         Margin="0 0 0 15"/>

                <Label Content="Пароль"
                       FontSize="14"
                       Foreground="#FF483D8B"
                       Margin="5 0 0 5"/>
                <PasswordBox x:Name="PasswordTextBox"
                            Height="35"
                            Margin="0 0 0 30"/>

                <Button x:Name="ButtonLogin"
                        Content="Войти"
                        Height="40"
                        Click="ButtonLogin_Click"/>

                <TextBlock x:Name="ErrorMessage"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Margin="0 15 0 0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>